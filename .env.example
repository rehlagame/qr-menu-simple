# بيئة التطبيق
# قيم ممكنة: development, production
NODE_ENV=development

# قاعدة البيانات
# قيم ممكنة: sqlite (للتطوير), supabase (للإنتاج)
DB_TYPE=sqlite

# Supabase Configuration (مطلوب عند استخدام DB_TYPE=supabase)
# احصل على هذه القيم من: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# إعدادات الخادم
# المنفذ الافتراضي للتطبيق
PORT=3000

# مفتاح الجلسة السري (مهم جداً للأمان!)
# يجب أن يكون نص عشوائي طويل وآمن
# يمكنك توليد واحد من: https://randomkeygen.com/
SESSION_SECRET=your_super_secret_session_key_here_minimum_32_characters

# إعدادات اختيارية إضافية
# ===============================

# رابط الموقع (للإنتاج)
# SITE_URL=https://yourdomain.com

# إعدادات البريد الإلكتروني (اختياري)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# إعدادات التحليلات (اختياري)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# إعدادات الدفع (اختياري - للمستقبل)
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# حدود الرفع (بالبايت)
# MAX_FILE_SIZE=5242880  # 5MB

# إعدادات اللغة الافتراضية
# DEFAULT_LANGUAGE=ar  # ar أو en

# وضع الصيانة
# MAINTENANCE_MODE=false

# ملاحظات مهمة:
# ==============
# 1. لا ترفع ملف .env الحقيقي على GitHub أبداً
# 2. انسخ هذا الملف إلى .env وأضف قيمك الحقيقية
# 3. تأكد من إضافة .env إلى .gitignore
# 4. في Vercel، أضف هذه المتغيرات من لوحة التحكم