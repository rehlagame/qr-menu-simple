<% layout('layouts/main') %>

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <div class="text-center mb-4">
                        <div class="logo-circle mx-auto mb-3">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h2 class="h4"><%= t.createAccount || 'إنشاء حساب جديد' %></h2>
                        <p class="text-muted"><%= t.registerSubtitle || 'سجل مطعمك وابدأ باستخدام QR Menu' %></p>
                    </div>

                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/auth/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="form-group mb-3">
                            <label class="form-label"><%= t.restaurantName || 'اسم المطعم' %></label>
                            <input type="text" name="name" class="form-control" required
                                   placeholder="<%= t.restaurantNamePlaceholder || 'مثال: مطعم الوجبات السريعة' %>">
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label"><%= t.restaurantSlug || 'معرف المطعم (للرابط)' %></label>
                            <input type="text" name="slug" class="form-control" required
                                   pattern="[a-z0-9-]+"
                                   placeholder="<%= t.slugPlaceholder || 'مثال: my-restaurant (أحرف إنجليزية صغيرة وأرقام وشرطات فقط)' %>">
                            <small class="form-text text-muted">
                                <%= t.slugHelp || 'سيكون الرابط: /menu/my-restaurant' %>
                            </small>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label"><%= t.email || 'البريد الإلكتروني' %></label>
                            <input type="email" name="email" class="form-control" required>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label"><%= t.password || 'كلمة المرور' %></label>
                            <input type="password" name="password" class="form-control" required
                                   minlength="6" placeholder="<%= t.passwordPlaceholder || '6 أحرف على الأقل ويحتوي على رقم واحد' %>">
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label"><%= t.phone || 'رقم الهاتف' %> (<%= t.optional || 'اختياري' %>)</label>
                            <input type="tel" name="phone" class="form-control"
                                   placeholder="<%= t.phonePlaceholder || 'رقم الهاتف' %>">
                        </div>

                        <div class="form-check mb-4">
                            <input type="checkbox" class="form-check-input" id="terms" required>
                            <label class="form-check-label" for="terms">
                                <%= t.agreeTerms || 'أوافق على الشروط والأحكام' %>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <%= t.createAccount || 'إنشاء الحساب' %>
                        </button>

                        <div class="text-center">
                            <span class="text-muted"><%= t.haveAccount || 'لديك حساب بالفعل؟' %></span>
                            <a href="/admin/login" class="text-primary text-decoration-none">
                                <%= t.loginNow || 'تسجيل الدخول' %>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        padding: 2rem 0;
    }

    .auth-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .logo-circle {
        width: 80px;
        height: 80px;
        background: #ff6b6b;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
    }
</style>