<!DOCTYPE html>
<html lang="<%= lang || 'ar' %>" dir="<%= isRTL ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'QR Menu' %></title>

    <!-- الخطوط -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap RTL -->
    <% if (isRTL) { %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <% } else { %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <% } %>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CSS الخاص -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- CSS إضافي للصفحات -->
    <% if (typeof additionalCSS !== 'undefined' && additionalCSS) { %>
        <% additionalCSS.forEach(css => { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }) %>
    <% } %>
</head>
<body>
<%- body %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- JS الخاص -->
<script src="/js/main.js"></script>

<!-- JS إضافي للصفحات -->
<% if (typeof additionalJS !== 'undefined' && additionalJS) { %>
    <% additionalJS.forEach(js => { %>
        <script src="<%= js %>"></script>
    <% }) %>
<% } %>
</body>
</html>